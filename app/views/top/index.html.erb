<div class="hero-unit">
  <h2>ブックマークしよう</h2>
  <p>Fakebはよくあるソーシャルブックマークサービスです</p>
</div>
<div class="page-header">
  <h3>人気のブックマーク</h3>
</div>
<% @bookmarks.each do |bookmark| %>
<% entry = bookmark.entry %>
<div class="row-fluid">
  <div class="span12">
    <h3><%= link_to entry.title, entry.url, :target => "_blank" %></h3>
    <p><%= link_to (bookmark.count.to_s + " users"), entry, :class => "btn btn-info btn-mini" %></p>
  </div>
</div>
<% end %>
