<div class="page-header">
  <h1><%= @user_name %>のブックマーク</h1>
</div>
<% @bookmarks.each do |bookmark| %>
  <% entry = bookmark.entry %>
<div class="row-fluid">
  <div class="span12">
    <h3><%= link_to entry.title, entry.url, :target => "_blank" %></h3>
    <p><%= bookmark.comment %></p>
    <p><%= link_to (entry.bookmarks.count.to_s + " users"), entry, :class => "btn btn-info btn-mini" %></p>
  </div>
</div>
<% end %>
