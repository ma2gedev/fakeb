<div class="page-header">
  <h1><%= link_to @entry.title, @entry.url, :target => "_blank" %></h1>
  <p><%= link_to (@entry.bookmarks.count.to_s + " users"), @entry, :class => "btn btn-info btn-mini" %></p>
</div> 
<div class="row-fluid">
  <h2>ブックマークしている人</h2>
  <% @bookmarks.each do |bookmark| %>
  <div class="row-fluid">
    <div class="span12">
      <h3><%= link_to bookmark.user.name, :controller => :bookmarks, :action => :index, :name => bookmark.user.name %></h3>
      <p><%= bookmark.comment %></p>
    </div>
  </div>
  <% end %>
</div> 
